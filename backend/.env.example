# Application Settings
APP_NAME=AI Textbook Platform API
APP_VERSION=1.0.0
DEBUG=false

# Database - Neon Serverless Postgres
# Get your connection string from: https://console.neon.tech/
# Format: postgresql+asyncpg://username:password@hostname/database?sslmode=require
NEON_DATABASE_URL=postgresql+asyncpg://your_username:your_password@your_host.neon.tech/neondb?sslmode=require

# Vector Database - Qdrant Cloud
# Get your URL and API key from: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=textbook_embeddings

# OpenAI API
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
CHAT_MODEL=gpt-4-turbo-preview

# Authentication
# Generate a secure random string for JWT_SECRET (e.g., using: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Origins (comma-separated)
# Add your Vercel deployment URL here
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Content Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50
